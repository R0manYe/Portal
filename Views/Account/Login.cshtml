@model Portal.Models.Identific.LoginViewModel

<h2>Вход в приложение</h2>

<div class="container p-0">
    <div class="row">
        <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
            <div asp-validation-summary="ModelOnly"></div>
            <div>
                <p>

                </p>
            </div>
            <div class="p-3 border bg-light">
                <div>
                    <label asp-for="Tab"></label><br />
                    <input asp-for="Tab" />
                    <span asp-validation-for="Tab"></span>
                </div>
                <div>
                    <label asp-for="Password"></label><br />
                    <input asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="">
                    <label asp-for="RememberMe"></label><br />
                    <input asp-for="RememberMe" />
                </div>
                <div>
                    <input class="btn btn-outline-secondary btn-lg" type="submit" value="Войти" />
                </div>
            </div>
        </form>
    </div>
</div>
