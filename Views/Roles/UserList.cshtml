@model IEnumerable<Portal.Models.Identific.User>
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h2>Список пользователей</h2>
            <table class="border border-dark table-sm" border="1">
                <tr class="tabl_th">
                    <th>Табельный</th>
                    <th></th>
                </tr>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-userid="@user.Id">Права доступа</a>
                        </td>
                    </tr>
                }
            </table>
            </div>
        </div>
